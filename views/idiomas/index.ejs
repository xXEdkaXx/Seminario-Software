    }

    th {
        background-color: #f8f9fa;
        color: #333;
        font-weight: bold;
    }


    .crear-link {
        display: inline-block;
        padding: 10px 20px;
        background-color: #28a745;
        color: white;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .crear-link:hover {
        background-color: #218838;
        text-decoration: none;
    }
</style>

